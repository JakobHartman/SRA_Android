<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.special.MenuActivity$CalendarFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <com.special.utils.UISwipableList
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonContainer"
            android:layout_marginRight="@dimen/list_horizontal_margin"
            android:layout_marginLeft="@dimen/list_horizontal_margin" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/buttonContainer">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                style="@style/UIButtonInverse"
                android:text="New Survey"
                android:textSize="@dimen/textsize_medium"
                android:id="@+id/new_question_set_button"
                />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>