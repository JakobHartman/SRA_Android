<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/dialog"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:text="Question Name: "
            android:id="@+id/name_label"
            android:singleLine="false"
            android:padding="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:id="@+id/name_field"
            style="@style/UIButtonInverse" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:text="Multi-use"
            android:id="@+id/multi_use_label"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/multi_use_checkbox"
            android:checked="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:text="Data Points: "
        android:id="@+id/list_title"
        android:singleLine="false"
        android:padding="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/UIButtonInverse"
            android:text="Finish"
            android:textSize="@dimen/textsize_medium"
            android:padding="12dp"
            android:id="@+id/finish_button"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight=".5" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/UIButtonInverse"
            android:text="Add Data Point"
            android:textSize="@dimen/textsize_medium"
            android:padding="12dp"
            android:id="@+id/add_button"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight=".5" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/list_view"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="25dip"
        android:paddingRight="0dip">
    <!--<ListView-->
    <!--android:id="@+id/list_view"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginRight="@dimen/list_horizontal_margin"-->
    <!--android:layout_marginLeft="@dimen/list_horizontal_margin"-->
    <!--android:paddingLeft="25dip"-->
    <!--android:paddingRight="0dip" />-->


    </LinearLayout>
</ScrollView>
</LinearLayout>
