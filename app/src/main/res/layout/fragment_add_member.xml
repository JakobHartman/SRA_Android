<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/dialog">


        <EditText
            android:id="@+id/editText"
            android:padding="8dp"
            android:background="@drawable/tab_default"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:hint="Member Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginBottom="10dp">
        </EditText>
        <Spinner
            android:id="@+id/spinner1"
            android:padding="8dp"
            android:background="@drawable/tab_default"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/relationships"
            android:layout_marginBottom="10dp">
        </Spinner>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Birthday"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:id="@+id/textView5"
            android:gravity="center_vertical|center_horizontal"
            android:enabled="true"
            android:layout_centerHorizontal="true"
            android:hint="Birthday" />
        <DatePicker
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/datePicker"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/spinner2"
            android:padding="8dp"
            android:background="@drawable/tab_default"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:hint="Head of Household Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:entries="@array/education">
        </Spinner>

        <com.special.utils.UITabs
            android:id="@+id/toggle"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/toggle1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Male"
                style="@style/UITabs" />

            <RadioButton
                android:id="@+id/toggle2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:checked="true"
                android:text="Female"
                android:layout_gravity="bottom"
                style="@style/UITabs" />

        </com.special.utils.UITabs>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="In School?"
                android:textColor="@color/black"
                android:layout_weight=".5"
                android:id="@+id/textView6"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical" />

            <com.special.utils.UITabs
                android:id="@+id/toggle3"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/toggle4"
                    android:layout_width="fill_parent"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    style="@style/UITabs" />

                <RadioButton
                    android:id="@+id/toggle5"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:text="No"
                    android:layout_gravity="bottom"
                    style="@style/UITabs"/>

            </com.special.utils.UITabs>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_weight="1"
                style="@style/UIButtonInverse"/>
            <Button
                android:id="@+id/btncancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight="2"
                style="@style/UIButtonInverse"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
