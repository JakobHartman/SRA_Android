<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.rbdc.sra" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.special.TransitionListAdapter$ForwarderActivity" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Dashboard"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name="com.special.InterviewActivity"
            android:label="@string/title_activity_interview" >
        </activity>
        <activity
            android:name="com.special.DataCollect"
            android:label="@string/title_activity_data_collect" >
        </activity>
        <activity
            android:name=".Picture"
            android:label="@string/title_activity_picture" >
        </activity>
    </application>

</manifest>
